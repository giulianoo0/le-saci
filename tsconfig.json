{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "moduleResolution": "NodeNext",
    "target": "ES3",                                
    "module": "NodeNext",                            
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                                
    "outDir": "dist/"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
